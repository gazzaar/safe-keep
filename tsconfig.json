{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    // "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"]
}
